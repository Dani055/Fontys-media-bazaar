@page
@model MediaBazaarWeb.Pages.Auth.LoginModel
@{
}

<div class="wrapper">
    <form method="post" class="with-legend">
        <fieldset>
            <legend>Login</legend>
            <div class="form-content">
                <div class="field">
                    <input type="text" asp-for="acc.Username">
                    <label asp-for="acc.Username">Username</label>
                </div>
                <div class="field">
                    <input type="password" asp-for="acc.Password">
                    <label asp-for="acc.Password">Password</label>
                </div>
                <div class="field-submit">
                    <button type="submit">Log in</button>
                </div>
            </div>
        </fieldset>

    </form>
</div>