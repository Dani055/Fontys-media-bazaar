@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="landing">
    <div class="wrapper">
        <h1>Welcome to Media Bazaar!</h1>
        @if (HttpContext.Session.GetLoggedEmp() == null)
        {
            <a asp-page="/Auth/Login" class="button-black">Sign in</a>
        }
        else
        {
            <a asp-page="/Auth/Logout" class="button-white">Log out</a>
        }
    </div>
</section>